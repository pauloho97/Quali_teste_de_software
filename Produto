package aula;

public class Produto {
	private int COD_PRODUTO; 
	private String NOME_PRODUTO; 
	private float PRECO_PRODUTO;
	
	public int getCOD_PRODUTO() {
		return COD_PRODUTO;
	}
	public void setCOD_PRODUTO(int cOD_PRODUTO) {
		
		COD_PRODUTO = cOD_PRODUTO;
	}
	public String getNOME_PRODUTO() {
		return NOME_PRODUTO;
	}
	public void setNOME_PRODUTO(String nOME_PRODUTO) {
		if(nOME_PRODUTO.equals("")) {
			System.out.println("Nome não pode ser vazio");
			throw new IllegalArgumentException("Nome vazio");
		}
		NOME_PRODUTO = nOME_PRODUTO;
	}
	public float getPRECO_PRODUTO() {
		return PRECO_PRODUTO;
	}
	public void setPRECO_PRODUTO(float pRECO_PRODUTO) {
		if(pRECO_PRODUTO <= 0) {
			System.out.println("preço deve ser maior que 0");
			throw new IllegalArgumentException("preço deve ser maior que 0");
		}
		
		PRECO_PRODUTO = pRECO_PRODUTO;
	}
	@Override
	public String toString() {
		return "Código: " + COD_PRODUTO + "\n" + "Nome do produto: " + NOME_PRODUTO + "\n " + "Preço do produto: "
				+ PRECO_PRODUTO;
	}
	
	
	
	
}
